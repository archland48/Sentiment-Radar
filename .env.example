# AI Builders API Configuration
# Get your API key from: https://space.ai-builders.com/backend/openapi.json
AI_BUILDER_TOKEN=your_api_key_here

# X (Twitter) API OAuth 2.0 Configuration
# Get your OAuth 2.0 keys from: https://developer.twitter.com/en/portal/projects-and-apps
X_API_CLIENT_ID=your_client_id_here
X_API_CLIENT_SECRET=your_client_secret_here

# Legacy Bearer Token (optional, for backward compatibility)
# TWITTER_BEARER_TOKEN=your_bearer_token_here

# Test Mode Configuration
# Set USE_MOCK_DATA=true to use mock database for testing
# Set USE_MOCK_DATA=false to use X API (requires OAuth 2.0 credentials above)
USE_MOCK_DATA=false
# Set USE_SNSCRAPE=true to use snscrape instead of Twitter API (free, but violates ToS)
USE_SNSCRAPE=false
